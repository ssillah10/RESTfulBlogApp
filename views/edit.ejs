<%- include('partials/header') %>
<div class="ui container main text segment">

    <div class="ui huge header">Edit <%=blog.title%></div>
    <div class="ui form" >
        <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
            <div class="field">
            <!-- <label>Title</label> -->
            <input type="text" name="blog[title]" value="<%=blog.title%>">
            </div>
            <div class="field">
            <!-- <label>Image URL</label> -->
            <input type="text" name="blog[image]" value="<%=blog.image%>">
            </div>
            <div class="field">
            <!-- <label>Blog Content</label> -->
            <textarea name="blog[body]"><%=blog.body%></textarea>
            <!-- <input type="text" name="blog[body]" placeholder="enter body content"> -->
            </div>
            <button type="submit" class="ui inverted green big button" required>Update Post</button>
        </form>
      </div>
</div>
<%- include('partials/footer') %>